{% assign ss = section.settings %}

{% if ss.enable %}
       <div class="home-banner">
                <div class="home-banner__content">
                    <h1>{{ ss.heading }}</h1>
                    <div class="home-banner__content-text">{{ss.content}}</div>
                    <a class="btn" href="{{ss.url}}">{{ss.button_text}}</a>
                </div>
       </div> 
{% endif %}

<style>
    .home-banner{
        background-image: url("{{ ss.image | img_url: 'x400' }}");
    }
    @media (max-width: 480px){
        .home-banner{
            background-image: url("{{ ss.image | img_url: '375x' }}")
        }
    }
</style>

{% schema %}
{
    "name": "Home Banner",
    "settings":[
        {
            "type":"checkbox",
            "id":"enable",
            "label":"Enable banner",
            "default": true
        },
        {
            "type":"image_picker",
            "id":"image",
            "label": "Image"
        },
        {
            "type":"image_picker",
            "id":"image_mobile",
            "label": "Image Mobile"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "content"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text" 
        },        
        {
            "type": "url",
            "id": "url",
            "label": "Button Link" 
        }
    ]
}
{% endschema %}